[Unit]
Description=CyberScope Threat Dashboard API
After=network.target
StartLimitIntervalSec=500
StartLimitBurst=5

[Service]
Type=simple
WorkingDirectory=/opt/cyberscope
EnvironmentFile=/opt/cyberscope/.env
ExecStart=/opt/cyberscope/venv/bin/uvicorn dashboard_backend.main:app --host 0.0.0.0 --port 8001
Restart=always
RestartSec=10
User=www-data
Group=www-data
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
